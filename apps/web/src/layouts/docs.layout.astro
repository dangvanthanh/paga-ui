---
import { getCollection } from 'astro:content'
import Layout from './layout.astro'
import { flex } from 'styled-system/patterns'
import { css } from 'styled-system/css'

interface Props {
  title: string
  description?: string
}

const { title } = Astro.props
const allOverview = await getCollection('overview')
const allComponents = await getCollection('components')
const sidebars = [
  { title: 'Overview', items: [...allOverview] },
  { title: 'Components', items: [...allComponents] },
]
---

<Layout title={title}>
  <header
    role="banner"
    class={flex({
      bg: 'white',
      direction: 'column',
      position: 'sticky',
      top: 0,
      borderBottomWidth: '1px',
      borderColor: 'gray.200',
    })}
  >
    <div class={flex({ align: 'center', justify: 'space-between', height: 16, p: 6, w: 'full' })}>
      <a href="/" class={css({ fontWeight: 700, fontSize: '2xl' })}>Paga UI</a>
      <a href="https://github.com/dangvanthanh/paga-ui" target="_blank" rel="noopener noreferrer">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class={css({ w: 6, h: 6 })}
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>
    </div>
  </header>
  <div class={flex({})}>
    <aside
      class={flex({
        direction: 'column',
        p: 6,
        w: 64,
        overflow: 'auto',
        height: 'calc(100vh - 64px)',
      })}
    >
      <div class={flex({ direction: 'column', gap: 2 })}>
        {
          sidebars.map((sidebar) => (
            <div class={flex({ direction: 'column' })}>
              <div class={css({ fontWeight: 500, py: 2 })}>{sidebar.title}</div>
              <ul
                class={flex({
                  direction: 'column',
                  pl: 3,
                  borderLeftWidth: '1px',
                  borderColor: 'gray.200',
                })}
              >
                {sidebar.items.map((item) => (
                  <li
                    class={css({
                      px: 2,
                      py: 1.5,
                      fontSize: 'sm',
                      rounded: 'sm',
                      _hover: { bg: 'gray.50' },
                    })}
                  >
                    <a
                      class={css({ display: 'block' })}
                      href={`/${sidebar.title.toLowerCase()}/${item.slug}`}
                    >
                      {item.data.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </aside>
    <main role="main" class={css({ display: 'flex', flexDirection: 'column', flex: '1 1 0%' })}>
      <slot />
    </main>
  </div>
</Layout>
