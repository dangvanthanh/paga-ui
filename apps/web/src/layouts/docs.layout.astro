---
import { type CollectionEntry } from 'astro:content'
import Layout from './layout.astro'
import { flex } from 'styled-system/patterns'
import { css } from 'styled-system/css'
import Hero from '@/components/shared/hero.astro'
import Sidebar from '@/components/shared/sidebar.astro'

interface Props {
  title: string
  description?: string
  entry: CollectionEntry<'components'> | CollectionEntry<'overview'>
}

const { title, entry } = Astro.props
---

<Layout title={title}>
  <header
    role="banner"
    class={flex({
      bg: 'white',
      direction: 'column',
      position: 'sticky',
      top: 0,
      borderBottomWidth: '1px',
      borderColor: 'gray.200',
    })}
  >
    <div class={flex({ align: 'center', justify: 'space-between', height: 16, p: 6, w: 'full' })}>
      <a href="/" class={css({ fontWeight: 700, fontSize: '2xl' })}>Paga UI</a>
      <a href="https://github.com/dangvanthanh/paga-ui" target="_blank" rel="noopener noreferrer">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class={css({ w: 6, h: 6 })}
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>
    </div>
  </header>
  <div class={flex({ h: 'full' })}>
    <aside
      class={flex({
        direction: 'column',
        p: 6,
        w: 64,
        overflow: 'auto',
        height: 'full',
        pos: 'fixed',
      })}
    >
      <Sidebar />
    </aside>
    <main
      role="main"
      class={css({ display: 'flex', flexDirection: 'column', flex: '1 1 0%', ml: 64 })}
    >
      <Hero entry={entry} />
      <div class={css({ w: 'full', maxW: '3xl', mx: 'auto', py: 8 })}>
        <slot />
      </div>
    </main>
  </div>
</Layout>
