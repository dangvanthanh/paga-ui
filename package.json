{
	"name": "paga-ui",
	"version": "1.0.0",
	"description": "Beautifully designed components built with Zagjs and Panda CSS.",
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "git config core.hooksPath .hooks"
	},
	"keywords": ["Zagjs", "PandaCSS"],
	"author": "Dang Van Thanh",
	"license": "MIT",
	"devDependencies": {
		"@paga/biome-config": "workspace:*",
		"@paga/typescript-config": "workspace:*",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.1"
	},
	"packageManager": "bun@1.3.3",
	"engines": {
		"node": ">=20"
	},
	"workspaces": ["apps/*", "packages/*"],
	"lint-staged": {
		"*.{js,ts,tsx,vue}": ["pnpm run lint", "pnpm run format"]
	},
	"dependencies": {
		"@zag-js/floating-panel": "^1.30.0",
		"@zag-js/image-cropper": "^1.30.0",
		"@zag-js/listbox": "^1.30.0",
		"@zag-js/marquee": "^1.30.0",
		"@zag-js/navigation-menu": "^1.30.0"
	}
}
