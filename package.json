{
	"name": "paga-ui",
	"version": "1.0.0",
	"description": "Beautifully designed components built with Zagjs and Panda CSS.",
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "husky"
	},
	"keywords": [
		"Zagjs",
		"PandaCSS"
	],
	"author": "Dang Van Thanh",
	"license": "MIT",
	"devDependencies": {
		"@paga/biome-config": "workspace:*",
		"@paga/preset": "workspace:*",
		"@paga/typescript-config": "workspace:*",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"turbo": "^1.13.1"
	},
	"packageManager": "pnpm@8.9.0",
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"*.{js,ts,tsx,vue}": [
			"pnpm run lint",
			"pnpm run format"
		]
	}
}